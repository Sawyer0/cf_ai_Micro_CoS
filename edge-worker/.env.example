# Example environment configuration for Micro CoS backend (FastAPI)
#
# Copy this file to `.env` 

# General app settings
APP_ENV=development
LOG_LEVEL=info
PORT=8000

# Secret key for signing (sessions, JWTs, etc.)
SECRET_KEY=change-me

# Cloudflare / edge integration (if the backend needs to call edge APIs)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=cf_api_token_here
CLOUDFLARE_WORKERS_BASE_URL=
WORKERS_AI_MODEL_ID=@cf/meta/llama-3.3-70b-instruct-fp8-fast

# Google Calendar MCP integration (if the backend ever talks directly to MCP)
GOOGLE_CALENDAR_MCP_HOST=localhost:3000
GOOGLE_OAUTH_KEYS_FILE=./gcp-oauth.keys.json
CALENDAR_LOOKBACK_DAYS=7
CALENDAR_LOOKAHEAD_DAYS=90

# Duffel API Key for Flights MCP integration
DUFFEL_API_KEY=duffel_api_key_here

# GOOGLE API - MICRO CoS (web)
Client_ID=google_client_id_here
Client_secret=google_client_secret_here